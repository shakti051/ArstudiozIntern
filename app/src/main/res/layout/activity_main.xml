<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:orientation="vertical">

    <TextView
    android:layout_width="wrap_content" android:layout_gravity="center"
    android:layout_height="wrap_content" android:text="Name"/>
    <EditText
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:id="@+id/etName"/>
    <requestFocus/>

    <TextView
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="wrap_content" android:text="Surname" />
    <EditText
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:id="@+id/etSurname"/>
    <requestFocus/>

    <TextView
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="wrap_content" android:text="Batch"/>

    <EditText
        android:layout_width="match_parent" android:gravity="center" android:hint="month joined"
        android:layout_height="wrap_content" android:id="@+id/etBatch"/>
    <requestFocus/>

    <TextView
        android:layout_width="wrap_content" android:layout_gravity="center"
        android:layout_height="wrap_content" android:text="ID"/>

    <EditText
        android:layout_width="match_parent" android:gravity="center"
        android:layout_height="wrap_content" android:id="@+id/editText_id"/>

    <requestFocus/>

    <TextView
        android:id="@+id/auth_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp"/>

    <android.support.v7.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/add_button" android:text="ADD BUTTON"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="View All" android:id="@+id/button_viewAll"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/button_update" android:text="Update"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Delete" android:id="@+id/button_delete"/>
</android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>